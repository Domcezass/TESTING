local petsFolder = game:GetService("ReplicatedStorage"):FindFirstChild("Eggs")
if petsFolder then
    local egg = petsFolder:FindFirstChild("EH Egg")
    if egg then
        local pets = egg:FindFirstChild("Pets")
        if pets then
            local easterDeath = pets:FindFirstChild("Easter Death")
            if easterDeath and easterDeath:IsA("NumberValue") then
                print("Easter Death chance (before):", easterDeath.Value)
                easterDeath.Value = 1000  -- Modify the drop rate
                print("Easter Death chance (after):", easterDeath.Value)
            else
                print("Easter Death exists, but is not a NumberValue!")
            end
        else
            print("Pets folder not found!")
        end
    else
        print("EH Egg not found!")
    end
else
    print("Eggs folder not found in ReplicatedStorage!")
end
